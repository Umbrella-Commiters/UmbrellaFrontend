<html t:type="layout" title="Reset Password" t:sidebarTitle="Help!"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">

	<t:delegate to="layout" />
	
	<t:block id="invalid">
	Invalid UUID. Please try to reset your password again.
	</t:block>
	
	<t:block id="valid">
	<t:beaneditform t:id="create" submitlabel="message:submit-label"
		object="retriever">
				<p:email>
			<t:label for="email" />
			<t:textfield t:id="email" value="retriever.email" />
		</p:email>
		<p:username>
			<t:label for="username" />
			<t:textfield t:id="username" value="retriever.username" />
		</p:username>


		<p:password>
			<t:label for="password" />
			<t:passwordfield t:id="password"  t:mixins="exanpe/PasswordStrengthChecker" t:javascriptChecker="euuChecker" value="retriever.password" />
		</p:password>

		<p:password1>
			<t:label for="password1" />
			<t:passwordfield t:id="password1" value="retriever.password1" />
		</p:password1>

		<p:verificationCode>


			<label>Verification Image</label>
			<t:kaptchaimage t:id="kaptcha"/>
  			<br/>
  			<label>Verification Code</label>
  			<t:kaptchafield  visible="true" image="kaptcha"/>
  			
		</p:verificationCode>
	</t:beaneditform>

