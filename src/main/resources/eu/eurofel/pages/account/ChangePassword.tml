<html t:type="layout" title="Change Password" t:sidebarTitle="Help!"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	<t:beaneditform t:id="ChangePassword" submitlabel="message:submit-label"
		object="password">
		<p:oldPassword>
			<t:label for="oldPassword" />
			<t:passwordfield t:id="oldPassword" value="password.oldPassword" />
		</p:oldPassword>

		<p:newPassword1>
			<t:label for="newPassword1" />
			<t:passwordfield t:id="newPassword1"  t:mixins="exanpe/PasswordStrengthChecker" t:javascriptChecker="euuChecker" value="password.newPassword1" />
		</p:newPassword1>

		<p:newPassword2>
			<t:label for="newPassword2" />
			<t:passwordfield t:id="newPassword2" value="password.newPassword2" />
		</p:newPassword2>

		<p:eaahash>
			<t:hidden value="password.eaahash" />
		</p:eaahash>
		<p:eaakey>
			<t:hidden value="password.eaakey" />
		</p:eaakey>
	</t:beaneditform>
	
